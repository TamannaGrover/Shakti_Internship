#CONFIGURATION FILES OPTIMISED FOR SHAKTI


CONFIG_64BIT=y
CONFIG_RISCV=y
CONFIG_ARCH_RV64I=y

# Clock and Timer
CONFIG_ARCH_CLOCKSOURCE_INIT=y
CONFIG_RISCV_TIMER=y

# Memory
CONFIG_ARCH_MMAP_RND_BITS=18
CONFIG_ARCH_MMAP_RND_BITS_MAX=24
CONFIG_ARCH_MMAP_RND_BITS_MIN=18
CONFIG_ARCH_SPARSEMEM_ENABLE=y
CONFIG_SPARSEMEM_VMEMMAP_ENABLE=y

# Compiler Options
CONFIG_CC_HAVE_STACKPROTECTOR_TLS=y
CONFIG_CC_IMPLICIT_FALLTHROUGH="-Wimplicit-fallthrough=5"
CONFIG_CC_NO_ARRAY_BOUNDS=y

# Common Kernel Options
CONFIG_COMMON_CLK=y
CONFIG_CPU_RMAP=y
CONFIG_CONTEXT_TRACKING=y
CONFIG_COREDUMP=y
CONFIG_FRAME_POINTER=y

# DMA and IO
CONFIG_DMA_DIRECT_REMAP=y
CONFIG_GENERIC_IOREMAP=y
CONFIG_HAS_DMA=y
CONFIG_HAS_IOMEM=y
CONFIG_HAS_IOPORT_MAP=y

# File Systems
CONFIG_EXT4_FS=y
CONFIG_FAT_FS=y
CONFIG_VFAT_FS=y

# Generic Features
CONFIG_GENERIC_ALLOCATOR=y
CONFIG_GENERIC_BUG=y
CONFIG_GENERIC_EARLY_IOREMAP=y
CONFIG_GENERIC_GETTIMEOFDAY=y
CONFIG_GENERIC_IRQ_MULTI_HANDLER=y
CONFIG_GENERIC_SMP_IDLE_THREAD=y
CONFIG_GENERIC_STRNCPY_FROM_USER=y
CONFIG_GENERIC_STRNLEN_USER=y

# GPIO and UART
CONFIG_GPIO_GENERIC=y
CONFIG_SERIAL_OF_PLATFORM=y
CONFIG_SERIAL_SIFIVE=y
CONFIG_SERIAL_SIFIVE_CONSOLE=y

# Network and USB
CONFIG_NET_FAILOVER=y
CONFIG_USB=y
CONFIG_USB_COMMON=y
CONFIG_USB_EHCI_HCD=y
CONFIG_USB_XHCI_HCD=y

# Crypto
CONFIG_CRYPTO_CRC32C=y
CONFIG_CRYPTO_LIB_SHA1=y
CONFIG_CRYPTO_LIB_SHA256=y
CONFIG_CRYPTO_SHA256=y
CONFIG_CRYPTO_SHA512=y

# Debugging and Performance Monitoring
CONFIG_DEBUG_INFO=y
CONFIG_PRINTK_TIME=y
CONFIG_TRACE_CLOCK=y
CONFIG_SCHED_DEBUG=y

# Shakti Specific Options
CONFIG_SMP=y
CONFIG_NR_CPUS=8

# Ensure RISC-V features
CONFIG_RISCV_ALTERNATIVE=y
CONFIG_RISCV_DMA_NONCOHERENT=y
CONFIG_RISCV_ISA_C=y
CONFIG_RISCV_ISA_FALLBACK=y
CONFIG_RISCV_ISA_V=y
CONFIG_RISCV_ISA_V_DEFAULT_ENABLE=y
CONFIG_RISCV_ISA_ZBB=y

# Power Management
CONFIG_POWER_RESET=y
CONFIG_POWER_RESET_GPIO=y

# I2C Support
CONFIG_I2C=y
CONFIG_I2C_BOARDINFO=y

# Watchdog
CONFIG_WATCHDOG_CORE=y

# Enable additional options as required by Shakti's hardware
# Consult Shakti documentation for further customization

# Optional: Enable additional debugging options as needed for development
# CONFIG_DEBUG_BUGVERBOSE=y


